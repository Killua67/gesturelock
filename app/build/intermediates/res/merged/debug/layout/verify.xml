<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:lock="http://schemas.android.com/apk/res/com.sovnem.lockrelease"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#000000"
	tools:context="${relativePackage}.${activityClass}" >

	<TextView
		android:id="@+id/textView_desc"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_above="@+id/lock"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="34dp"
		android:text="TextView" />

	<com.sovnem.lockrelease.GestureLockView
		android:id="@+id/lock"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true"
		android:layout_marginBottom="64dp"
		lock:normalColor="#efefef"
		lock:wrongColor="@android:color/holo_blue_bright" />

</RelativeLayout>